#!/usr/bin/env vash
#in task 0, cp alx public key to ur web_02 authorized key
#ssh-copy-id -i ~/.ssh/alxKey.pub MoseServer2
#now lets install mysql 5.7
#the signature key is a key for mysql version 5.7+
sudo apt-key add signature.key

sudo sh -c 'echo "deb http://repo.mysql.com/apt/ubuntu bionic mysql-5.7" >> /etc/apt/sources.list.d/mysql.list'

sudo apt-get update
#check available version
 apt-cache policy mysql-server

 #fibally install mysql
 sudo apt install -f mysql-client=5.7* mysql-community-server=5.7* mysql-server=5.7*q
